[Unit]
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
PIDFile={{ devpi_folder_home }}/server/.xproc/devpi-server/xprocess.PID
Restart=always
ExecStartPre=/bin/sleep 2
ExecStart=/usr/local/bin/devpi-server --start --serverdir={{ devpi_folder_home }}
ExecStop=/usr/local/bin/devpi-server --stop --serverdir={{ devpi_folder_home }}
User={{ devpi_user }}
SuccessExitStatus=SIGKILL

[Install]
